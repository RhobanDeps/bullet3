{
    "name": "rhobandeps/bullet3",
    "includes": "src",
    "libraries": [
        "build/src/BulletCollision",
        "build/src/LinearMath",
        "build/src/BulletDynamics",
        "build/src/BulletSoftBody"
    ],
    "build": [
        "mkdir build",
        "cd build",
        "cmake -DCMAKE_BUILD_TYPE=Release ..",
        "make"
    ],
    "links": [
        "build/src/BulletDynamics/libBulletDynamics.so",
        "build/src/BulletCollision/libBulletCollision.so",
        "build/src/LinearMath/libLinearMath.so",
        "build/src/BulletSoftBody/libBulletSoftBody.so"
    ]
}
